modules = ["nodejs-20", "python-3.11", "web", "postgresql-16"]
run = "npm run dev"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npm run preview"]
build = ["sh", "-c", "npm run build"]

[[ports]]
localPort = 5173
externalPort = 5173

[[ports]]
localPort = 5174
externalPort = 80

[[ports]]
localPort = 5175
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 8000

[workflows]
runButton = "Full Stack Development"

[[workflows.workflow]]
name = "Run"
author = 44435766
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run dev"

[[workflows.workflow]]
name = "Full Stack Development"
author = 44435766
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && python manage.py runserver 0.0.0.0:8000"

[[workflows.workflow]]
name = "Build Application"
author = 44435766
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run build"

[[workflows.workflow]]
name = "Serve Build"
author = 44435766
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run build && npm run preview"

[agent]
expertMode = true
